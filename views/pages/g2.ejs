    <h1> <%= title %> </h1>

	<form action="/g2" method="<%= isEdit ? 'PUT':'POST'  %>" class="form">
		<fieldset>
        	<legend>General Information</legend>
			<div>
				<label for="first_name" >First Name</label>
				<% if (isEdit) { %>
					<input type="text" disabled value="<%= firstname %>" name="first_name" id="first_name" placeholder="First Name" autofocus>
				<% } else { %>
					<input type="text" name="first_name" id="first_name" placeholder="First Name" autofocus>
				<% } %>
			</div>
			<div>
				<label for="last_name">Last Name</label>
				<% if (isEdit) { %>
					<input type="text" disabled value="<%= lastname %>" name="last_name" id="last_name" placeholder="Last Name">
				<% } else { %>
					<input type="text" name="last_name" id="last_name" placeholder="Last Name">
				<% } %>
			</div>
			<div>
				<label for="license_num">License Number</label>
				<% if (isEdit) { %>
					<input type="text" disabled value="<%= license %>" name="license_num" id="license_num" placeholder="Must be 8 Character">
				<% } else { %>
					<input type="text"  name="license_num" id="license_num" placeholder="Must be 8 Character">
				<% } %>
				
			</div>       	
			<div>
				<label for="age">Age</label>
				<% if (isEdit) { %>
					<input type="text" disabled value="<%= age %>" name="age" id="age" placeholder="Age">
				<% } else { %>
					<input type="text"  name="age" id="age" placeholder="Age">
				<% } %>	
			</div>       	
			<div>
				<label for="dob">Date Of Birth</label>
				<% if (isEdit) { %>
					<input type="date" disabled  value="<%= dob %>" name="dob" id="age" placeholder="DOB">
			    <% } else { %>	
					<input type="date" name="dob" id="age" placeholder="DOB">
				<% } %>	

			</div>       	
		</fieldset>
		<fieldset>
        	<legend>Car Details</legend>
			<div>
				<label>Vehicle Type:</label>
				<input type="radio" name="vehicle" id="sedan" value="sedan" class="left" checked>Sedan	        	
				<input type="radio" name="vehicle" id="truck" value="truck" class="left">Truck
				<input type="radio" name="vehicle" id="sports" value="sports" class="left">Sports Car
				<input type="radio" name="vehicle" id="minivan" value="minivan" class="left last">Minivan
			</div>
			<div>
				<label>Engine Type:</label>
				<input type="radio" name="engine" id="ev" value="ev" class="left" checked>EV
				<input type="radio" name="engine" id="gas" value="gas" class="left">Gas
				<input type="radio" name="engine" id="hybrid" value="hybrid" class="left last">Hybrid
			</div>
			<div>
				<input type="checkbox" name="convertible" id="convertible">Convertible
			</div>
		</fieldset>		
		<div>
			<input type="submit" id="submit" value="<%= isEdit? 'Update details' : 'Submit Request' %>">
		</div>
	</form>
</div>
      <script src="script.js" async defer></script>
    </body>
</html>